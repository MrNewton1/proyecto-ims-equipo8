@model List<Domain.IM253E08Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<!-- DataTables CSS + Extensiones de botones -->
<link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.bootstrap5.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h1 class="mb-4">Lista de Usuarios</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
    </div>

    <table id="usuariosTable" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Direccion</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.Correo</td>
                    <td>
                        <!-- Botón Ajax para detalles -->
                        <button type="button"
                                class="btn btn-info btn-sm btn-detalles"
                                data-id="@usuario.Id">
                            Detalles
                        </button>
                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">
                            Editar
                        </a>
                        <button type="button"
                                class="btn btn-danger btn-sm"
                                onclick="confirmarEliminacion('@usuario.Id')">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal de confirmación para eliminar usuario -->
<div class="modal fade" id="modalEliminarUsuario" tabindex="-1" aria-labelledby="modalEliminarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">¿Seguro que deseas eliminar este usuario?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-footer">
                <a id="btnEliminarConfirmado" class="btn btn-danger">Eliminar</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables JS + Extensiones de botones -->
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>

    <script>
        // Inicializa DataTables con botones de exportación
        $(document).ready(function () {
            $('#usuariosTable').DataTable({
                dom: 'Bfrtip',
                buttons: ['excelHtml5', 'pdfHtml5'],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json'
                }
            });

            // Petición Ajax para mostrar detalles en modal
            $('.btn-detalles').on('click', function () {
                var id = $(this).data('id');
                $.get('/Usuarios/Details/' + id, function (html) {
                    $('#detallesModal .modal-body').html(html);
                    new bootstrap.Modal(document.getElementById('detallesModal')).show();
                });
            });
        });

        // Muestra el modal de confirmación para eliminar un usuario.
        function confirmarEliminacion(id) {
            document.getElementById('btnEliminarConfirmado').href = `/Usuarios/Delete/${id}`;
            new bootstrap.Modal(document.getElementById('modalEliminarUsuario')).show();
        }
    </script>
}
