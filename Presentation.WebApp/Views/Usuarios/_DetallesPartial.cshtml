@model Domain.IM253E08Usuario

@* 
    Partial view que muestra los detalles de un usuario dentro del modal.
    Se inyecta vía Ajax cuando se pulsa el botón “Detalles” en la lista de usuarios.
*@

<div class="container py-3">
    <!-- Título de sección en el modal -->
    <h5>Detalles del Usuario</h5>

    <div class="row g-3 mt-2">
        <!-- Campo Nombre -->
        <div class="col-md-6">
            <label class="form-label"><strong>Nombre:</strong></label>
            <p>@Model.Nombre</p>
        </div>

        <!-- Campo Correo -->
        <div class="col-md-6">
            <label class="form-label"><strong>Correo:</strong></label>
            <p>@Model.Correo</p>
        </div>

        <!-- Campo Dirección -->
        <div class="col-md-6">
            <label class="form-label"><strong>Dirección:</strong></label>
            <p>@Model.Direccion</p>
        </div>

        <!-- Campo Teléfono -->
        <div class="col-md-6">
            <label class="form-label"><strong>Teléfono:</strong></label>
            <p>@Model.Telefono</p>
        </div>
    </div>
</div>
